<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire des auteurs -->
    <record id="view_library_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Auteur">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de l'auteur"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="birth_date"/>
                            <field name="nationality"/>
                        </group>
                        <group>
                            <field name="book_count"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Biographie">
                            <field name="biography" placeholder="Biographie de l'auteur..."/>
                        </page>
                        <page string="Livres">
                            <field name="book_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="isbn"/>
                                    <field name="publication_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste des auteurs -->
    <record id="view_library_author_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree string="Auteurs">
                <field name="name"/>
                <field name="nationality"/>
                <field name="birth_date"/>
                <field name="book_count"/>
            </tree>
        </field>
    </record>

    <!-- Vue recherche des auteurs -->
    <record id="view_library_author_search" model="ir.ui.view">
        <field name="name">library.author.search</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <search string="Rechercher des auteurs">
                <field name="name"/>
                <field name="nationality"/>
                <separator/>
                <filter name="filter_inactive" string="Archivé" 
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_nationality" string="Nationalité" 
                            context="{'group_by': 'nationality'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_author" model="ir.actions.act_window">
        <field name="name">Auteurs</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier auteur
            </p>
            <p>
                Enregistrez les auteurs de votre bibliothèque.
            </p>
        </field>
    </record>

</odoo>
