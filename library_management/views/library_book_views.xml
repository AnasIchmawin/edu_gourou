<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire des livres -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Livre">
                <header>
                    <button name="action_set_available" string="Marquer disponible" 
                            type="object" class="oe_highlight"
                            invisible="state == 'available'"/>
                    <button name="action_set_maintenance" string="En maintenance" 
                            type="object"
                            invisible="state == 'maintenance'"/>
                    <button name="action_set_lost" string="Marquer perdu" 
                            type="object"
                            invisible="state == 'lost'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="available,borrowed,reserved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_borrowings" type="object" 
                                class="oe_stat_button" icon="fa-book">
                            <field name="borrowing_count" widget="statinfo" 
                                   string="Emprunts"/>
                        </button>
                        <button name="action_view_reservations" type="object" 
                                class="oe_stat_button" icon="fa-bookmark"
                                invisible="reservation_count == 0">
                            <field name="reservation_count" widget="statinfo" 
                                   string="Réservations"/>
                        </button>
                    </div>
                    <field name="cover_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Titre du livre"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="isbn"/>
                            <field name="author_id"/>
                            <field name="category_id"/>
                            <field name="publisher"/>
                        </group>
                        <group>
                            <field name="publication_date"/>
                            <field name="pages"/>
                            <field name="borrowing_count"/>
                            <field name="current_borrowing_id" 
                                   invisible="state != 'borrowed'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Description du livre..."/>
                        </page>
                        <page string="Historique des emprunts">
                            <field name="borrowing_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="borrower_name"/>
                                    <field name="borrowing_date"/>
                                    <field name="expected_return_date"/>
                                    <field name="actual_return_date"/>
                                    <field name="state" widget="badge" 
                                           decoration-success="state == 'returned'"
                                           decoration-warning="state == 'borrowed'"
                                           decoration-danger="state == 'late'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes internes">
                            <field name="notes" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste des livres -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Livres" sample="1">
                <field name="name"/>
                <field name="isbn"/>
                <field name="author_id"/>
                <field name="category_id"/>
                <field name="publication_date"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'available'"
                       decoration-info="state == 'reserved'"
                       decoration-warning="state == 'borrowed'"
                       decoration-muted="state == 'maintenance'"
                       decoration-danger="state == 'lost'"/>
                <field name="borrowing_count"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban des livres -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="name"/>
                <field name="author_id"/>
                <field name="state"/>
                <field name="cover_image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('library.book', 'cover_image', record.id.raw_value)" 
                                     alt="Couverture" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="author_id"/>
                                </div>
                                <div>
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche des livres -->
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Rechercher des livres">
                <field name="name" string="Titre ou ISBN" 
                       filter_domain="['|', ('name', 'ilike', self), ('isbn', 'ilike', self)]"/>
                <field name="author_id"/>
                <field name="category_id"/>
                <separator/>
                <filter name="filter_available" string="Disponibles" 
                        domain="[('state', '=', 'available')]"/>
                <filter name="filter_borrowed" string="Empruntés" 
                        domain="[('state', '=', 'borrowed')]"/>
                <filter name="filter_reserved" string="Réservés" 
                        domain="[('state', '=', 'reserved')]"/>
                <separator/>
                <filter name="filter_inactive" string="Archivé" 
                        domain="[('active', '=', False)]"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_author" string="Auteur" 
                            context="{'group_by': 'author_id'}"/>
                    <filter name="group_category" string="Catégorie" 
                            context="{'group_by': 'category_id'}"/>
                    <filter name="group_state" string="État" 
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Livres</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier livre
            </p>
            <p>
                Enregistrez les livres de votre bibliothèque avec leurs informations détaillées.
            </p>
        </field>
    </record>

    <record id="action_library_book_available" model="ir.actions.act_window">
        <field name="name">Livres disponibles</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('state', '=', 'available')]</field>
        <field name="context">{'search_default_filter_available': 1}</field>
    </record>

    <record id="action_library_book_borrowed" model="ir.actions.act_window">
        <field name="name">Livres empruntés</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'borrowed')]</field>
        <field name="context">{'search_default_filter_borrowed': 1}</field>
    </record>

</odoo>
