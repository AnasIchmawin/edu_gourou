<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire des frais d'adhésion -->
    <record id="view_library_membership_fee_form" model="ir.ui.view">
        <field name="name">library.membership.fee.form</field>
        <field name="model">library.membership.fee</field>
        <field name="arch" type="xml">
            <form string="Frais d'adhésion">
                <header>
                    <button name="action_confirm_payment" string="Confirmer le paiement" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Annuler" 
                            type="object"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,paid"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="member_id"/>
                            <field name="member_type"/>
                            <field name="fee_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_date"/>
                            <field name="payment_method"/>
                            <field name="validity_start"/>
                            <field name="validity_end"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste des frais d'adhésion -->
    <record id="view_library_membership_fee_tree" model="ir.ui.view">
        <field name="name">library.membership.fee.tree</field>
        <field name="model">library.membership.fee</field>
        <field name="arch" type="xml">
            <tree string="Frais d'adhésion" decoration-success="state == 'paid'">
                <field name="name"/>
                <field name="member_id"/>
                <field name="member_type"/>
                <field name="fee_amount" widget="monetary"/>
                <field name="payment_date"/>
                <field name="validity_start"/>
                <field name="validity_end"/>
                <field name="state" widget="badge"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_library_membership_fee" model="ir.actions.act_window">
        <field name="name">Frais d'adhésion</field>
        <field name="res_model">library.membership.fee</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
