<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire des adhérents -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Adhérent">
                <header>
                    <button name="action_renew_membership" string="Renouveler l'adhésion" 
                            type="object" class="oe_highlight"
                            invisible="state == 'active'"/>
                    <button name="action_suspend" string="Suspendre" 
                            type="object"
                            invisible="state == 'suspended'"/>
                    <button name="action_activate" string="Activer" 
                            type="object"
                            invisible="state == 'active'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="active,suspended,expired"/>
                </header>
                <sheet>
                    <field name="photo" widget="image" class="oe_avatar"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_borrowings" type="object" 
                                class="oe_stat_button" icon="fa-book">
                            <field name="total_borrowings" widget="statinfo" 
                                   string="Emprunts"/>
                        </button>
                        <button name="action_view_borrowings" type="object" 
                                class="oe_stat_button" icon="fa-bookmark">
                            <field name="current_borrowings" widget="statinfo" 
                                   string="En cours"/>
                        </button>
                        <button name="action_view_borrowings" type="object" 
                                class="oe_stat_button" icon="fa-exclamation-triangle"
                                invisible="late_borrowings == 0">
                            <field name="late_borrowings" widget="statinfo" 
                                   string="En retard"/>
                        </button>
                        <button name="%(action_library_penalty)d" type="action" 
                                class="oe_stat_button" icon="fa-money"
                                context="{'default_member_id': active_id}"
                                invisible="unpaid_penalties == 0">
                            <field name="unpaid_penalties" widget="monetary" 
                                   string="Pénalités dues"/>
                        </button>
                        <button name="action_view_reservations" type="object" 
                                class="oe_stat_button" icon="fa-bookmark"
                                invisible="reservation_count == 0">
                            <field name="reservation_count" widget="statinfo" 
                                   string="Réservations"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom complet de l'adhérent"/>
                        </h1>
                        <h3>
                            <field name="member_number" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="member_type"/>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                        </group>
                        <group>
                            <field name="registration_date"/>
                            <field name="expiration_date"/>
                            <field name="returned_borrowings"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="address" placeholder="Adresse complète..."/>
                    </group>
                    <notebook>
                        <page string="Historique des emprunts">
                            <field name="borrowing_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="borrowing_date"/>
                                    <field name="expected_return_date"/>
                                    <field name="actual_return_date"/>
                                    <field name="state" widget="badge" 
                                           decoration-success="state == 'returned'"
                                           decoration-warning="state == 'borrowed'"
                                           decoration-danger="state == 'late'"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Pénalités">
                            <field name="penalty_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="late_days"/>
                                    <field name="penalty_amount" widget="monetary"/>
                                    <field name="payment_amount" widget="monetary"/>
                                    <field name="remaining_amount" widget="monetary"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="total_penalties" widget="monetary"/>
                                    <field name="paid_penalties" widget="monetary"/>
                                    <field name="unpaid_penalties" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Frais d'adhésion">
                            <field name="membership_fee_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="fee_amount" widget="monetary"/>
                                    <field name="payment_date"/>
                                    <field name="validity_start"/>
                                    <field name="validity_end"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Réservations">
                            <field name="reservation_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="book_title"/>
                                    <field name="book_author"/>
                                    <field name="priority"/>
                                    <field name="reservation_date"/>
                                    <field name="expiry_date"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                            <group>
                                <group>
                                    <field name="reservation_count"/>
                                    <field name="pending_reservations"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes sur l'adhérent..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste des adhérents -->
    <record id="view_library_member_tree" model="ir.ui.view">
        <field name="name">library.member.tree</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <tree string="Adhérents" decoration-danger="state == 'expired'" 
                  decoration-muted="state == 'suspended'">
                <field name="member_number"/>
                <field name="name"/>
                <field name="member_type"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="registration_date"/>
                <field name="expiration_date"/>
                <field name="current_borrowings"/>
                <field name="late_borrowings" optional="show"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'suspended'"
                       decoration-danger="state == 'expired'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban des adhérents -->
    <record id="view_library_member_kanban" model="ir.ui.view">
        <field name="name">library.member.kanban</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="member_number"/>
                <field name="member_type"/>
                <field name="state"/>
                <field name="photo"/>
                <field name="current_borrowings"/>
                <field name="expiration_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" 
                             t-attf-style="border-left: 4px solid #{
                                 record.state.raw_value == 'active' ? '#28a745' : 
                                 record.state.raw_value == 'suspended' ? '#ffc107' : '#dc3545'
                             }; padding: 15px;">
                            <div class="o_kanban_image" style="float: left; margin-right: 10px;">
                                <img t-att-src="kanban_image('library.member', 'photo', record.id.raw_value)" 
                                     alt="Photo" style="width: 64px; height: 64px; border-radius: 50%;"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title" style="font-size: 16px;">
                                    <field name="name"/>
                                </strong>
                                <div style="color: #6c757d; margin-top: 5px;">
                                    <i class="fa fa-id-card"/> <field name="member_number"/>
                                </div>
                                <div style="margin-top: 5px;">
                                    <i class="fa fa-graduation-cap"/> <field name="member_type"/>
                                </div>
                                <div style="margin-top: 5px;">
                                    <i class="fa fa-book"/> <field name="current_borrowings"/> emprunts en cours
                                </div>
                                <div style="margin-top: 5px;">
                                    <i class="fa fa-calendar"/> Expire: <field name="expiration_date"/>
                                </div>
                                <div style="margin-top: 8px;">
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche des adhérents -->
    <record id="view_library_member_search" model="ir.ui.view">
        <field name="name">library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search string="Rechercher des adhérents">
                <field name="name"/>
                <field name="member_number"/>
                <field name="email"/>
                <field name="phone"/>
                <separator/>
                <filter name="filter_active" string="Actifs" 
                        domain="[('state', '=', 'active')]"/>
                <filter name="filter_expired" string="Expirés" 
                        domain="[('state', '=', 'expired')]"/>
                <filter name="filter_suspended" string="Suspendus" 
                        domain="[('state', '=', 'suspended')]"/>
                <separator/>
                <filter name="filter_with_borrowings" string="Avec emprunts en cours" 
                        domain="[('current_borrowings', '>', 0)]"/>
                <filter name="filter_with_late" string="Avec retards" 
                        domain="[('late_borrowings', '>', 0)]"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_member_type" string="Type d'adhérent" 
                            context="{'group_by': 'member_type'}"/>
                    <filter name="group_state" string="Statut" 
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Adhérents</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier adhérent
            </p>
            <p>
                Enregistrez les adhérents de votre bibliothèque avec leurs informations complètes.
            </p>
        </field>
    </record>

    <record id="action_library_member_active" model="ir.actions.act_window">
        <field name="name">Adhérents Actifs</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('state', '=', 'active')]</field>
        <field name="context">{'search_default_filter_active': 1}</field>
    </record>

    <record id="action_library_member_expired" model="ir.actions.act_window">
        <field name="name">Adhérents Expirés</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'expired')]</field>
        <field name="context">{'search_default_filter_expired': 1}</field>
    </record>

</odoo>
