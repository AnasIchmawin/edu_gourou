<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue formulaire des emprunts -->
    <record id="view_library_borrowing_form" model="ir.ui.view">
        <field name="name">library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form string="Emprunt">
                <header>
                    <button name="action_confirm_borrowing" string="Confirmer l'emprunt" 
                            type="object" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_return_book" string="Retourner le livre" 
                            type="object" class="oe_highlight"
                            invisible="state not in ['borrowed', 'late']"/>
                    <button name="action_mark_lost" string="Marquer comme perdu" 
                            type="object"
                            invisible="state not in ['borrowed', 'late']"/>
                    <button name="action_cancel" string="Annuler" 
                            type="object"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,borrowed,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="book_id" options="{'no_create': True}"/>
                            <field name="member_id"/>
                            <field name="borrowing_date"/>
                            <field name="expected_return_date"/>
                            <field name="actual_return_date" 
                                   invisible="state != 'returned'"/>
                        </group>
                        <group>
                            <field name="borrower_name"/>
                            <field name="borrower_email" widget="email"/>
                            <field name="borrower_phone" widget="phone"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="days_borrowed"/>
                            <field name="is_late" invisible="1"/>
                            <field name="late_days" 
                                   invisible="not is_late"
                                   decoration-danger="late_days &gt; 0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes sur l'emprunt..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste des emprunts -->
    <record id="view_library_borrowing_tree" model="ir.ui.view">
        <field name="name">library.borrowing.tree</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <tree string="Emprunts" 
                  decoration-danger="state == 'late'"
                  decoration-muted="state == 'returned'">
                <field name="name"/>
                <field name="book_id"/>
                <field name="borrower_name"/>
                <field name="borrowing_date"/>
                <field name="expected_return_date"/>
                <field name="actual_return_date"/>
                <field name="days_borrowed"/>
                <field name="late_days" optional="show"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'returned'"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'borrowed'"
                       decoration-danger="state == 'late'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban des emprunts -->
    <record id="view_library_borrowing_kanban" model="ir.ui.view">
        <field name="name">library.borrowing.kanban</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="book_id"/>
                <field name="borrower_name"/>
                <field name="state"/>
                <field name="is_late"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click #{record.is_late.raw_value ? 'oe_kanban_color_2' : ''}">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="book_id"/>
                                </div>
                                <div>
                                    <field name="borrower_name"/>
                                </div>
                                <div>
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue recherche des emprunts -->
    <record id="view_library_borrowing_search" model="ir.ui.view">
        <field name="name">library.borrowing.search</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <search string="Rechercher des emprunts">
                <field name="name"/>
                <field name="book_id"/>
                <field name="borrower_name"/>
                <separator/>
                <filter name="filter_draft" string="Brouillon" 
                        domain="[('state', '=', 'draft')]"/>
                <filter name="filter_borrowed" string="En cours" 
                        domain="[('state', '=', 'borrowed')]"/>
                <filter name="filter_late" string="En retard" 
                        domain="[('state', '=', 'late')]"/>
                <filter name="filter_returned" string="Retournés" 
                        domain="[('state', '=', 'returned')]"/>
                <separator/>
                <filter name="filter_my_borrowings" string="Mes emprunts" 
                        domain="[]"/>
                <group expand="0" string="Grouper par">
                    <filter name="group_book" string="Livre" 
                            context="{'group_by': 'book_id'}"/>
                    <filter name="group_borrower" string="Emprunteur" 
                            context="{'group_by': 'borrower_name'}"/>
                    <filter name="group_state" string="État" 
                            context="{'group_by': 'state'}"/>
                    <filter name="group_borrowing_date" string="Date d'emprunt" 
                            context="{'group_by': 'borrowing_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_library_borrowing" model="ir.actions.act_window">
        <field name="name">Emprunts</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouvel emprunt
            </p>
            <p>
                Enregistrez les emprunts de livres par les utilisateurs.
            </p>
        </field>
    </record>

    <record id="action_library_borrowing_current" model="ir.actions.act_window">
        <field name="name">Emprunts en cours</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('state', '=', 'borrowed')]</field>
        <field name="context">{'search_default_filter_borrowed': 1}</field>
    </record>

    <record id="action_library_borrowing_late" model="ir.actions.act_window">
        <field name="name">Emprunts en retard</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state', '=', 'late')]</field>
        <field name="context">{'search_default_filter_late': 1}</field>
    </record>

</odoo>
